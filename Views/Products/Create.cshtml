        const [file] = Files.files;
        console.log(Files.files)
        if (file) {
            //blah.src = URL.createObjectURL(file)
            document.getElementById("Image").value = "scxs ";
        }
    }

  
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
